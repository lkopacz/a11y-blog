{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
  ]
%}
<div{{ attributes.addClass(classes) }}>
  <div class="block--bundle-featured-image-block__wrapper">
    <div class="block--bundle-featured-image-block__img">
        {{ content.field_thumbnail }}
    </div>
    <div class="block--bundle-featured-image-block__content">
        {{ title_prefix }}
        {% if label %}
            <h2{{ title_attributes }}>{{ label }}</h2>
        {% endif %}
        {{ title_suffix }}
        {{ content.body }}
    </div>
  </div>
</div>
